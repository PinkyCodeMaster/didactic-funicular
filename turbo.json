{
  "$schema": "https://turbo.build/schema.json",

  "globalDependencies": [".env", "tsconfig.json"],
  "globalEnv": ["NODE_ENV", "DATABASE_URL"],
  "ui": "tui",
  "noUpdateNotifier": true,
  "concurrency": "100%",
  "cacheDir": ".turbo/cache",
  "daemon": false,
  "envMode": "strict",

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "env": ["TEST_ENV", "NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "check-types": {
      "inputs": ["$TURBO_ROOT$/tsconfig.json", "$TURBO_DEFAULT$"],
      "outputs": []
    }
  }
}
